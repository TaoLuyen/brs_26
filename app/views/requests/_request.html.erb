<% @requests.each_with_index do |request, index| %>
  <tr>
    <th scope="row"><%= index + 1 %></th>
    <td><%= request.content %></td>
    <td><%= request.created_at %></td>
    <td>
      <%= link_to t("requests.table.show"), "#",
        class: "btn btn-primary" %>
      <%= link_to t("requests.table.delete"), "#", method: :delete,
        data: {confirm: t("admin.messages.confirm")}, class: "btn btn-danger" %>
    </td>
  </tr>
<% end %>
