<div class="row">
  <%= form_for [:admin, @book] do |f| %>
    <div class="col-md-12">
    <%= render "shared/error_messages", object: @book %>

    <div class="col-md-5 col-xs-12 col-sm-5 ">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description,
          class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :author %>
        <%= f.text_field :author, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :number_page %><br>
        <%= f.number_field :number_page %>
      </div>

    </div>

    <div class="col-md-1"></div>

    <div class="col-md-5 col-xs-12 col-sm-5 ">

      <div class="form-group">
        <%= f.label :publish_date %><br>
        <div class="input-group">
          <%= f.text_field :publish_date, class: "form-control",
            data: {date_format: I18n.t("application.general.date_format")} %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :category %><br>
        <%= f.collection_select :category_id, @categories, :id, :name %>
      </div>
      <br>
      <br>
      <br>
      <span class="picture">
        <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png" %>
      </span>
      <div class="form-group">
        <%= f.submit t(:submit), class: "btn btn-primary" %>
      </div>
      <div class="form-group">
        <%= link_to t(". back"), admin_books_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
